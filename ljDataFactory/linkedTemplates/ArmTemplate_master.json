{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"factoryName": {
			"type": "string",
			"metadata": "Data Factory name",
			"defaultValue": "ljDataFactory"
		},
		"ljCreateFile_password": {
			"type": "secureString",
			"metadata": "Secure string for 'password' of 'ljCreateFile'"
		},
		"ljAzureDataLakeStore_properties_typeProperties_dataLakeStoreUri": {
			"type": "string",
			"defaultValue": "https://ljformationazure.azuredatalakestore.net/webhdfs/v1"
		},
		"ljAzureDataLakeStore_properties_typeProperties_tenant": {
			"type": "string",
			"defaultValue": "544fe47f-5772-488f-81a9-fa9de607ecfa"
		},
		"ljAzureDataLakeStore_properties_typeProperties_subscriptionId": {
			"type": "string",
			"defaultValue": "32ad602f-d364-45c5-ab7f-b8e199af2da0"
		},
		"ljAzureDataLakeStore_properties_typeProperties_resourceGroupName": {
			"type": "string",
			"defaultValue": "rg-BDU_EcoleDeLaData"
		},
		"ljCreateFile_properties_typeProperties_host": {
			"type": "string",
			"defaultValue": "C:\\Users\\ljannani\\Desktop\\cop\\formationazure"
		},
		"ljCreateFile_properties_typeProperties_userId": {
			"type": "string",
			"defaultValue": "BETD\\ljannani"
		},
		"containerUri": {
			"type": "string",
			"metadata": "URI to storage account containing linked ARM templates"
		},
		"containerSasToken": {
			"type": "string",
			"metadata": "Sas token to storage account containing linked ARM templates"
		}
	},
	"variables": {
		"factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
	},
	"resources": [
		{
			"name": "ljDataFactory_ArmTemplate_0",
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2018-02-01",
			"properties": {
				"mode": "incremental",
				"templateLink": {
					"uri": "[concat(parameters('containerUri'), '/ArmTemplate_0.json', parameters('containerSasToken'))]",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
					"factoryName": {
						"value": "[parameters('factoryName')]"
					},
					"ljCreateFile_password": {
						"value": "[parameters('ljCreateFile_password')]"
					},
					"ljAzureDataLakeStore_properties_typeProperties_dataLakeStoreUri": {
						"value": "[parameters('ljAzureDataLakeStore_properties_typeProperties_dataLakeStoreUri')]"
					},
					"ljAzureDataLakeStore_properties_typeProperties_tenant": {
						"value": "[parameters('ljAzureDataLakeStore_properties_typeProperties_tenant')]"
					},
					"ljAzureDataLakeStore_properties_typeProperties_subscriptionId": {
						"value": "[parameters('ljAzureDataLakeStore_properties_typeProperties_subscriptionId')]"
					},
					"ljAzureDataLakeStore_properties_typeProperties_resourceGroupName": {
						"value": "[parameters('ljAzureDataLakeStore_properties_typeProperties_resourceGroupName')]"
					},
					"ljCreateFile_properties_typeProperties_host": {
						"value": "[parameters('ljCreateFile_properties_typeProperties_host')]"
					},
					"ljCreateFile_properties_typeProperties_userId": {
						"value": "[parameters('ljCreateFile_properties_typeProperties_userId')]"
					}
				}
			},
			"dependsOn": []
		},
		{
			"name": "ljDataFactory_ArmTemplate_1",
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2018-02-01",
			"properties": {
				"mode": "incremental",
				"templateLink": {
					"uri": "[concat(parameters('containerUri'), '/ArmTemplate_1.json', parameters('containerSasToken'))]",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
					"factoryName": {
						"value": "[parameters('factoryName')]"
					}
				}
			},
			"dependsOn": [
				"[resourceId('Microsoft.Resources/deployments', 'ljDataFactory_ArmTemplate_0')]"
			]
		}
	]
}